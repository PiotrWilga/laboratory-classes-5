<div class="card">
    <img
      class="card__image"
      src="/images/sample-product.jpg"
      alt="<%= product.name %>"
    />
    <h3 class="card__title"><%= product.name %></h3>
    <p class="card__description"><%= product.description %></p>
    <p class="card__price"><%= product.price %> PLN</p>
    <a href="/products/<%= product.name %>">Szczegóły</a>
    <button data-name="<%= product.name %>">Usuń</button>
  </div>
  